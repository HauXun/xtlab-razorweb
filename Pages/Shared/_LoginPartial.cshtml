@using Microsoft.AspNetCore.Identity
@using RazorWeb.Models

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav">
  @if (SignInManager.IsSignedIn(User))
  {
    <li class="nav-item">
      <a asp-area="Identity" class="nav-link text-dark" asp-page="/Account/Manage/Index">Xin chào @UserManager.GetUserName(User)</a>
    </li>
    <li class="nav-item">
      <a asp-area="Identity" class="nav-link text-dark" asp-page="/Account/Logout">Đăng xuất</a>
    </li>
  }
  else
  {
    <li class="nav-item">
      <a asp-area="Identity" class="nav-link text-dark" asp-page="/Account/Register">Đăng ký</a>
    </li>
    <li class="nav-item">
      <a asp-area="Identity" class="nav-link text-dark" asp-page="/Account/Login">Đăng nhập</a>
    </li>
  }
</ul>